{
  // Chat AI related
  "chat.promptFiles": true,
  // CMake Tools: Fix build directory to build/linux
  "cmake.buildDirectory": "${workspaceFolder}/build/linux",
  "cmake.generator": "Ninja",
  "cmake.configureOnOpen": false,
  // C++/CMake related
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.intelliSenseMode": "linux-clang-x64",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  // File associations
  "files.associations": {
    "*.h": "cpp",
    "*.hpp": "cpp",
    "*.c": "c",
    "*.cpp": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "bitset": "cpp",
    "cctype": "cpp",
    "charconv": "cpp",
    "chrono": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "codecvt": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "condition_variable": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "string": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "ratio": "cpp",
    "regex": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "format": "cpp",
    "fstream": "cpp",
    "future": "cpp",
    "initializer_list": "cpp",
    "iomanip": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "mutex": "cpp",
    "new": "cpp",
    "numbers": "cpp",
    "ostream": "cpp",
    "semaphore": "cpp",
    "span": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "stop_token": "cpp",
    "streambuf": "cpp",
    "thread": "cpp",
    "typeinfo": "cpp",
    "variant": "cpp",
    "any": "cpp",
    "cstring": "cpp",
    "forward_list": "cpp",
    "map": "cpp",
    "ranges": "cpp",
    "valarray": "cpp",
    "cinttypes": "cpp",
    "set": "cpp",
    "complex": "cpp",
    "csignal": "cpp",
    "list": "cpp",
    "source_location": "cpp",
    "shared_mutex": "cpp",
    "stdfloat": "cpp",
    "typeindex": "cpp"
  },
  // Markdown related
  "markdown.validate.enabled": false,
  "markdown.extension.toc.githubCompatibility": true,
  "markdown.extension.toc.updateOnSave": true,
  "markdown.extension.print.absoluteImgPath": false,
  "markdownlint.config": {
    "default": true,
    "MD013": false
  },
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "markdown-preview-enhanced.enableScriptExecution": false,
  "githubMarkdownPreview.breaks": true,
  "markdown-table-prettify.alignment": "left"
}